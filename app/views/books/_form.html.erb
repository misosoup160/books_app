<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= t 'errors.header', model: book.model_name.human, count: book.errors.count %></h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :memo %>
    <%= form.text_area :memo, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :author %>
    <%= form.text_area :author, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :picture %>
    <%= form.file_field :picture, class: 'form-control-file' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
